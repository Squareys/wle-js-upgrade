{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "declaration": true,
    "newLine": "LF",
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true
  },

  "include": [ "./*.ts", "./*.js", "./*.mts", "./*.mjs" ],
  "exclude": [ "node_modules" ]
}
